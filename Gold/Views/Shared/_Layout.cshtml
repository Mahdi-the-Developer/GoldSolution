@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Premium Bootstrap 5 Landing Page Template" name="description" />
    <meta content="Startup, Business, Multi-uses, HTML, Clean, Modern, Creative" name="keywords" />
    <meta content="Shreethemes" name="author" />
    <meta content="shreethemes@gmail.com" name="email" />
    <meta content="https://shreethemes.in" name="website" />
    <meta content="v1.0.0" name="Version" />
    <!-- favicon -->
    <link href="/images/favicon.ico" rel="shortcut icon" />
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/tiny-slider.css" rel="stylesheet" type="text/css" />
    <link href="/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/cdn.css" rel="stylesheet" type="text/css" />
    <link href="/css/custom-style.css" rel="stylesheet" type="text/css" />
    <!-- Main Css -->
    <link href="/css/style.min.css" id="theme-opt" rel="stylesheet" type="text/css" />
    <link href="/css/my-style.css" rel="stylesheet" />
    <!--===== Custom Font css =====-->
    <link href="/css/custom-fonts.css" rel="stylesheet" />

</head>
<body>
    <!-- Navbar STart -->
    <header class="defaultscroll sticky" id="topnav">
        <div class="container">
            
            <!-- Logo container-->
            <div id="navigation">
                <!-- Navigation Menu-->
                <ul class="navigation-menu nav-right nav-light">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li class="parent-menu-item"><a asp-controller="Account" asp-action="LogoutView">LogOut</a></li>
                            <li class="parent-menu-item"><a asp-controller="Account" asp-action="UserPanel">@User.Identity?.Name</a></li>
                        }
                        else
                        {
                            <li class="parent-menu-item"><a asp-controller="Account" asp-action="Register">Register</a></li>
                            <li class="parent-menu-item"><a asp-controller="Account" asp-action="Login">LogIn</a></li>
                        }
                    }
                </ul>
            </div>

            <!-- End Logo container-->
            <div class="menu-extras">
                <div class="menu-item">
                    <!-- Mobile menu toggle-->
                    <a class="navbar-toggle" id="isToggle" onclick="toggleMenu()">
                        <div class="lines">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </a>
                    <!-- End mobile menu toggle-->
                </div>
            </div>


            <div id="navigation">
                <!-- Navigation Menu-->
                <ul class="navigation-menu nav-left nav-light">
                    @if (User.IsInRole("Admin") || User.IsInRole("MainAdmin"))
                    {
                        <li class="has-submenu parent-parent-menu-item">
                            <a href="javascript:void(0)">ادمین</a><span class="menu-arrow"></span>
                            <ul class="submenu">
                                <li class="has-submenu parent-menu-item">
                                    <a href="javascript:void(0)">ماژول طلا</a><span class="submenu-arrow"></span>
                                    <ul class="submenu">
                                        <li><a class="sub-menu-item" asp-controller="ManageGold" asp-action="ListOfUsersGoldDemands">لیست خرید کاربران</a></li>
                                        <li><a class="sub-menu-item" asp-controller="ManageGold" asp-action="ListOfUserGoldOffers">لیست فروش کاربران</a></li>
                                        <li><a class="sub-menu-item" asp-controller="ManageGold" asp-action="SystemGoldBillsList">لیست فاکتورهای سیستم</a></li>
                                        <li><a class="sub-menu-item" asp-controller="ManageGold" asp-action="SetSystemGoldToCash">فروش طلا</a></li>
                                        <li><a class="sub-menu-item" asp-controller="ManageGold" asp-action="SetSystemCashToGold">خرید طلا</a></li>
                                    </ul>
                                </li>

                                <li class="has-submenu parent-menu-item">
                                    <a asp-controller="ManageUsers" asp-action="UsersList"> مدیریت کاربران </a>                                    
                                </li>
                                <li class="has-submenu parent-menu-item">
                                    <a asp-controller="ManageRoles" asp-action="RolesList">مدیریت نقش ها</a>
                                <li class="has-submenu parent-menu-item">
                                    <a asp-controller="Statics" asp-action="Index">آمار</a>
                                </li>
                            </ul>
                        </li>                           
                    }


                    <li class="has-submenu parent-parent-menu-item">
                        <a href="javascript:void(0)">طلا</a><span class="menu-arrow"></span>
                        <ul class="submenu">
                            <li class="has-submenu parent-menu-item">
                                <a asp-controller="Gold" asp-action="UserOrdersList"> لیست معاملات من </a>
                            </li>
                            <li class="has-submenu parent-menu-item">
                                <a asp-controller="Gold" asp-action="Buy"> خرید طلا </a>
                            </li>
                            <li class="has-submenu parent-menu-item">
                                <a asp-controller="Gold" asp-action="Sell"> فروش طلا </a>
                            </li>
                        </ul>
                    </li>


                </ul><!--end navigation menu-->
            </div><!--end navigation-->
            
        </div><!--end container-->
    </header><!--end header-->
    <!-- Navbar End -->
    @RenderBody()
    <!-- Footer Start -->
    <footer class="footer bg-footer">
        <div class="py-5 footer-border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="section-title">
                            <div class="d-flex">
                                <i class="uil uil-envelope-star display-4 text-white title-dark"></i>
                                <div class="flex-1 ms-md-4 ms-3">
                                    <h4 class="fw-bold text-light title-dark mb-1">در خبرنامه های ما مشترک شوید</h4>
                                    <p class="text-white-50 mb-0">ثبت نام کنید و آخرین نکات را از طریق ایمیل دریافت کنید.</p>
                                </div>
                            </div>
                        </div>
                    </div><!--end col-->

                    <div class="col-md-4 mt-4 mt-sm-0">
                        <div class="text-md-end ms-5 ms-sm-0">
                            <a class="btn btn-primary" href="javascript:void(0)">اکنون مشترک شوید</a>
                        </div>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end container-->
        </div><!--end div-->

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="footer-py-60">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-12 mt-4 mt-sm-0 pt-2 pt-sm-0 order-4 order-md-1">
                            </div><!--end col-->

                            <div class="col-lg-3 col-md-3 col-12 order-1 order-md-2">
                                <h6 class="footer-head">شرکت</h6>
                                <ul class="list-unstyled footer-list mt-4">
                                    <li><a class="text-foot" href="page-aboutus.html"><img src="~/images/icon/myicons/arrow left.svg" class="footer-icon" /> درباره ما </a></li>
                                </ul>
                            </div><!--end col-->

                            <div class="col-lg-3 col-md-3 col-12 mt-4 mt-sm-0 pt-2 pt-sm-0 order-2 order-md-3">
                                <h6 class="footer-head">لینک های مفید</h6>
                                <ul class="list-unstyled footer-list mt-4">
                                    <li><a class="text-foot" href="index.html"><img src="~/images/icon/myicons/arrow left.svg" class="footer-icon" /> شرایط استفاده</a></li>
                                </ul>
                            </div><!--end col-->

                            <div class="col-lg-3 col-md-3 col-12 mt-4 mt-sm-0 pt-2 pt-sm-0 order-3 order-md-4">
                                <h6 class="footer-head">منابع</h6>
                                <ul class="list-unstyled footer-list mt-4">
                                    <li><a class="text-foot" href="page-faqs.html"><img src="~/images/icon/myicons/arrow left.svg" class="footer-icon" /> راهنمای کامل تم </a></li>
                                    <li><a class="text-foot" href="page-faqs.html"><img src="~/images/icon/myicons/arrow left.svg" class="footer-icon" /> میز پشتیبانی</a></li>
                                </ul>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->

        <div class="footer-py-30 footer-bar bg-footer">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-sm-4">
                        <div class="text-sm-start text-center">
                            <a href="#">
                                <img alt="" height="26" src="/images/logo-light.png" />
                            </a>
                        </div>
                    </div><!--end col-->

                    <div class="col-sm-8 mt-4 mt-sm-0">
                        <div class="text-sm-end text-center">
                            <p class="mb-0 text-muted">1401 © استارتی طراحی با  <i class="mdi mdi-heart text-danger"></i> ارائه شده در <a class="text-reset" href="https://www.rtl-theme.com/author/navidyaghoobi/products/" target="_blank">راست‌چین</a></p>
                        </div>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end container-->
        </div>
    </footer><!--end footer-->
    <!-- End -->
    <!-- Back to top -->
    <ul class="text-center list-unstyled switcher-button mb-0 position-fixed" style="top: 25%; right: 10px; z-index: 2;">
        <li class="d-grid"><a class="btn btn-icon rounded-circle btn-dark dark-version t-dark" href="javascript:void(0)" onclick="setTheme('style-dark')"> <i class="uil uil-moon fs-5"></i> </a></li>
        <li class="d-grid"><a class="btn btn-icon rounded-circle btn-dark light-version t-light" href="javascript:void(0)" onclick="setTheme('style')"> <i class="uil uil-sun fs-5"></i> </a></li>
    </ul>
    <a class="back-to-top rounded-pill" href="javascript:void(0)" id="back-to-top" onclick="topFunction()"><i class="mdi mdi-arrow-up"></i></a>
    <!-- Back to top -->
    <!-- javascript -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/tiny-slider.js"></script>
    <script src="/js/feather.min.js"></script>
    <!-- Main Js -->
    <script src="/js/plugins.init.js"></script><!--Note: All init js like tiny slider, counter, countdown, maintenance, lightbox, gallery, swiper slider, aos animation etc.-->
    <script src="/js/app.js"></script><!--Note: All important javascript like page loader, menu, sticky menu, menu-toggler, one page menu etc. -->
    <script src="/js/jquery.min.js"></script>
    <script src="/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="/js/usersCount.js"></script>
    @await RenderSectionAsync("Scripts",false);
</body>

</html> 